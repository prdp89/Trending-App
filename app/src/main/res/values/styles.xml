<resources>

    <!-- Base Fonts  -->
    <style name="TextAppearance.Text.GoogleSans.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Text.Roboto.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Text.Roboto.Medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <!-- Ends Here    -->

    <!-- Text Styles    -->

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/colorLightBlack</item>
    </style>

    <style name="TextStyle.Title.Roboto.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Roboto.Regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Title.Roboto.Medium" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Roboto.Medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextStyle.Title.Roboto.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Roboto.Medium</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorDenseBlack</item>
    </style>

    <style name="TextStyle.Title.GoogleSans.Regular" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.GoogleSans.Regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Ends Here    -->

</resources>
